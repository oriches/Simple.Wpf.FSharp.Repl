<Window x:Class="Wpf.Mvvm.TestHarness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:v="clr-namespace:Simple.Wpf.FSharp.Repl.Views;assembly=Simple.Wpf.FSharp.Repl"
        xmlns:themes="clr-namespace:Simple.Wpf.Themes;assembly=Simple.Wpf.Themes"
        xmlns:testHarness="clr-namespace:Wpf.Mvvm.TestHarness"
        Title="MainWindow"
        mc:Ignorable="d"
        Height="350"
        Width="525"
        d:DataContext="{d:DesignInstance testHarness:MainViewModel}">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <themes:Themes x:Name="ThemeControl"
                       Margin="5"
                       Grid.Row="0"
                       Focusable="True"
                       FocusManager.FocusedElement="{Binding ElementName=ThemeControl}" />

        <v:ReplWindow x:Name="ReplWindow"
                      Grid.Row="1"
                      DataContext="{Binding Path=Content, Mode=OneWay}" />
        
    </Grid>
</Window>
